{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "LevelSwitches": { "$fileSwitch": "Information" },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Literate, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] <s:{Scope}> {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "app.ndjson",
          "controlLevelSwitch": "$fileSwitch",
          "retainedFileCountLimit": 10,
          "rollingInterval": "Day",
          "buffered": true,
          "flushToDiskInterval": "00:00:59",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId" ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": { "maximumDestructuringDepth": 4 }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": { "maximumStringLength": 100 }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": { "maximumCollectionCount": 10 }
      }
    ]
  },
  "AllowedHosts": "*",
  "Version": "0.5.454",
  "CV": {
    "Capture": {
      "Source": "0",
      "FrameInterval": "00:00:00.3000000"
    },

    "Denoising": {
      "Algorithm": "None",
      "FastNlMeans": {
        "H": 3,
        "HColor": 3,
        "TemplateWindowSize": 7,
        "SearchWindowSize": 21
      },
      "MedianBlur": {
        "K": 3
      }
    },

    "Subtraction": {
      "Algorithm": "CNT",
      "CNT": {
        "MinPixelStability": 15,
        "UseHistory": true,
        "MaxPixelStability": 60,
        "IsParallel": true
      }
    },

    "Correction": {
      "Algorithm": "None",
      "StaticMask": {
        "PathToFile": "data/correction_mask.bmp"
      }
    },

    "Detection": {
      "Threshold": "0.1"
    }
  },

  "MQTT": {
    "ClientID": null,
    "Server": null,
    "Port": 1883,
    "User": null,
    "Password": null,
    "Reconnect": {
      "AttemptsCount": 0,
      "IntervalBetweenAttempts": "00:00:00"
    }
  },

  "StartSensor": false,
  "StartMQTT": false,
  "StreamingAllowed": false
}
