{
  "Serilog": {
    "Using":  [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "LevelSwitches": {"$fileSwitch" : "Warning"},
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "File", "Args": { 
          "path": "/var/log/occupancy_sensor/app.txt", 
          "controlLevelSwitch": "$fileSwitch",
          "retainedFileCountLimit": 10,
          "rollingInterval": "Day",
          "buffered": true,
          "flushToDiskInterval": "00:00:59"
        } 
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "Version": "0.4.0",
  "CV": {
    "Capture": {
      "Source": "0",
      "FrameInterval": "00:00:00.3000000"
    },

    "Denoising": {
      "Algorithm": "None",
      "FastNlMeans": {
        "H": 3,
        "HColor": 3,
        "TemplateWindowSize": 7,
        "SearchWindowSize": 21
      },
      "MedianBlur": {
        "K": 3
      }
    },

    "Subtraction": {
      "Algorithm": "CNT",
      "CNT": {
        "MinPixelStability": 15,
        "UseHistory": true,
        "MaxPixelStability": 60,
        "IsParallel": true
      }
    },

    "Correction": {
      "Algorithm": "None",
      "StaticMask": {
        "PathToFile":  "data/correction_mask.bmp" 
      } 
    },

    "Detection": {
      "Threshold": "0.1"
    }
  },

  "MQTT": 
  {
     "ClientID": null,
     "Server": null,
     "Port": 1883,
     "User": null,
    "Password": null,
     "Reconnect": {
      "AttemptsCount": 0,
      "IntervalBetweenAttempts": "00:00:00"
     } 
  },

  "StartSensor": false,
  "StartMQTT": false
}
